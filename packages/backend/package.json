{
  "name": "@ers/backend",
  "version": "0.1.0",
  "main": "dist/index.js",
  "scripts": {
  "dev": "ts-node-dev --respawn --transpile-only src/index.ts",

  "db:migrate": "dotenv -e .env -- supabase db push --db-url $DATABASE_URL",
  "db:seed": "dotenv -e .env -- node scripts/seed.js",

  "test": "jest --runInBand",
  "lint": "eslint . --ext .ts,.tsx",
  "format": "prettier --write .",
  "format:check": "prettier --check ."
   },
  "dependencies": {
    "@supabase/supabase-js": "^2.43.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
